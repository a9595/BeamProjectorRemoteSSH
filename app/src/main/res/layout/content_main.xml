<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tieorange.edu.beamprojectorrunner.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:id="@+id/ll_ip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/ip1_et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="255"
            android:inputType="number"
            android:maxLength="3"
            android:text=""
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:typeface="monospace" />

        <EditText
            android:id="@+id/ip1_et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="255"
            android:inputType="number"
            android:maxLength="3"
            android:text=""
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:typeface="monospace" />

        <EditText
            android:id="@+id/ip1_et3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="255"
            android:inputType="number"
            android:maxLength="3"
            android:text=""
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:typeface="monospace" />

        <EditText
            android:id="@+id/ip1_et4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="255"
            android:inputType="number"
            android:maxLength="3"
            android:text=""
            android:typeface="monospace" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_ip2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_ip1"
        android:layout_centerHorizontal="true">

        <EditText
            android:id="@+id/ip2_et1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="255"
            android:inputType="number"
            android:maxLength="3"
            android:text=""
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:typeface="monospace" />

        <EditText
            android:id="@+id/ip2_et2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="255"
            android:inputType="number"
            android:maxLength="3"
            android:text=""
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:typeface="monospace" />

        <EditText
            android:id="@+id/ip2_et3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="255"
            android:inputType="number"
            android:maxLength="3"
            android:text=""
            android:typeface="monospace" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."
            android:typeface="monospace" />

        <EditText
            android:id="@+id/ip2_et4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="255"
            android:inputType="number"
            android:maxLength="3"
            android:text=""
            android:typeface="monospace" />
    </LinearLayout>

    <com.dd.morphingbutton.MorphingButton
        android:id="@+id/btnMorphSimple"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_ip2"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:textColor="@android:color/white" />

</RelativeLayout>
